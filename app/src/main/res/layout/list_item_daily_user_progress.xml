<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_marginTop="56dp"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:layout_marginBottom="56dp"
    android:clickable="false"
    android:clipToPadding="false"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:elevation="4dp"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:gravity="bottom"
        android:orientation="vertical"
        android:outlineProvider="bounds"
        android:padding="8dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/group_target_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="8dp"
            android:background="#ccc" />

        <TextView
            android:id="@+id/current_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center_horizontal"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <LinearLayout
                android:id="@+id/progress_update_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="invisible">

                <EditText
                    android:id="@+id/progress_update_amount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:gravity="center"
                    android:text="0"
                    android:lines="1" />

                <Button
                    android:id="@+id/save_progress_update"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_check_black_24dp" />
            </LinearLayout>

            <Button
                android:id="@+id/initiate_progress_update"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="log progress" />

        </FrameLayout>

    </LinearLayout>
</RelativeLayout>
